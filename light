#include <Adafruit_NeoPixel.h>

#define PIN 12
#define NUMLED 2

Adafruit_NeoPixel pixels = Adafruit_NeoPixel(NUMLED, PIN, NEO_RGB + NEO_KHZ400);

void setup() {
  pixels.begin();
}

void loop() {
  for (int i = 0; i < 256; i++) {
    setColor( 0, i, 0);
    delay(10);
  }

  for (int i = 0; i < 256; i++) {
    setColor( i, 255, 0);
    delay(10);
  }

  for (int i = 0; i < 256; i++) {
    setColor( 255, 255, i);
    delay(10);
  }
}

void setColor(int r, int g, int b) {
  for (int i = 0 ; i < NUMLED; i++) {
    pixels.setPixelColor(i, pixels.Color(r, g, b));
    pixels.show();
  }
  delay(10);
}
